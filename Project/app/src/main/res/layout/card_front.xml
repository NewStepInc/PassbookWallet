<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/front_layout"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@android:color/holo_purple">
        <TextView
            android:id="@+id/front_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="FRONT (Card #00)"
            android:textSize="@dimen/passbook_title_fontsize"
            android:textColor="@android:color/background_light"/>

        <ImageButton
            android:id="@+id/front_flip"
            android:layout_width="@dimen/passbook_button_size"
            android:layout_height="@dimen/passbook_button_size"
            android:layout_below="@+id/front_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="370dp"
            android:src="@drawable/ic_info_outline"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:onClick="onFlip"/>
    </RelativeLayout>
</merge>